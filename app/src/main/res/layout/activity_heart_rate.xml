<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HeartRate">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="6dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everything is looking normal"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        />

    <LinearLayout
        android:id="@+id/heartanim"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/heartanim"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/bpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/heart2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="35sp"
                android:textColor="@color/red"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bpm"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/grey"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximun"
                android:textSize="19sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="140 bpm"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:layout_marginHorizontal="20dp"/>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum"
                android:textSize="19sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95 bpm"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:background="@drawable/greenbox"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Daily"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Weekly"
                android:textSize="20dp"
                android:background="@drawable/box"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Monthly"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/heartgraph"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:gravity="center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ghome"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/workout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wworkout"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/calender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wcalender"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/diet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wdiet"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bsetting"
            android:layout_marginHorizontal="12dp"/>

    </LinearLayout>
    
</LinearLayout>