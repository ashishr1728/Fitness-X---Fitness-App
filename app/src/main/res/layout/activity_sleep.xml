<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sleep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Tracker"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="70dp"
            android:textSize="25sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="390dp"
        android:layout_height="630dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <LinearLayout
                android:id="@+id/sleep"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:background="@drawable/light_blue_box"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/bpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ideal Hours for Sleep"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8hours 30minutes"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/green1"
                        android:layout_marginHorizontal="4dp"/>

                    <Button
                        android:id="@+id/learn"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:text="Learn More"
                        android:backgroundTint="@color/green1"
                        android:textSize="15sp"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginVertical="15dp"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sleepy_moon"/>

            </LinearLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/sleep_graph"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:background="@drawable/green_background"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Night Sleep"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="25dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8h 20min"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/light_blue_box"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Sleep Schedule"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginVertical="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/check"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Check"
                    android:textSize="15sp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="18dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:gravity="center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ghome"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/workout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wworkout"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/calender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wcalender"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/diet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wdiet"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bsetting"
            android:layout_marginHorizontal="12dp"/>

    </LinearLayout>

</LinearLayout>