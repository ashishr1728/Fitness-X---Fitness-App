<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen1">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="410dp"
        android:layout_height="430dp"
        android:src="@drawable/sp3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Improve Sleep Quality"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Improve the quality of your sleep with us, good quality sleep can bring a good mood in the morning"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wball"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wball"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gball"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wball"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <View
            android:layout_width="300dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/nextarrow"/>

    </LinearLayout>

</LinearLayout>
