<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="1dp"
            />

        <View
            android:layout_width="240dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/bellicon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bellicon"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <ScrollView
        android:layout_gravity="center"
        android:layout_width="390dp"
        android:layout_height="600dp"
        android:layout_marginVertical="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Find your Balance"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health and fitness goal with Body Balance"
                    android:textSize="18sp"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:id="@+id/heartrate"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:orientation="vertical"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="5dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="4dp"
                                android:layout_marginHorizontal="8dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="Heart Rate"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3h ago"
                                    android:textSize="15sp"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/h1"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/heart"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/heartrate"
                            android:layout_marginVertical="8dp"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 bpm"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:id="@+id/water"
                        android:orientation="vertical"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="5dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="4dp"
                                android:layout_marginHorizontal="8dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Water"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4h ago"
                                    android:textSize="15sp"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/water"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="750 ml"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:orientation="vertical"
                        android:id="@+id/stress"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="5dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="4dp"
                                android:layout_marginHorizontal="8dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Stress"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2h ago"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/stress"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:src="@drawable/stressgraph"
                            android:layout_marginVertical="8dp"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 Normal"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:id="@+id/sleep"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:orientation="vertical"
                        android:layout_marginVertical="8dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="4dp"
                                android:layout_marginHorizontal="8dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Sleep"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4h ago"
                                    android:textSize="15sp"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/sleep"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.5 Hours"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:id="@+id/step"
                        android:orientation="vertical"
                        android:layout_marginVertical="8dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="4dp"
                                android:layout_marginHorizontal="8dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Steps"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2h ago"
                                    android:textSize="15sp"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/stepstracker"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:src="@drawable/steps"
                            android:layout_marginVertical="8dp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:orientation="vertical"
                        android:id="@+id/spo2"
                        android:layout_marginVertical="8dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="4dp"
                                android:layout_marginHorizontal="8dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="SpO2"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3h ago"
                                    android:textSize="15sp"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/spo2"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:src="@drawable/spo2graph"
                            android:layout_marginVertical="8dp"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88%"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:gravity="center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ghome"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/workout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wworkout"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/calender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wcalender"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/diet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wdiet"
            android:layout_marginHorizontal="12dp"/>

        <View
            android:layout_width="13dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bsetting"
            android:layout_marginHorizontal="12dp"/>

    </LinearLayout>

</LinearLayout>